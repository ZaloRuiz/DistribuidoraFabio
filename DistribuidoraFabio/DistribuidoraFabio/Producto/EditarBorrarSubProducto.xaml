<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DistribuidoraFabio.Producto.EditarBorrarSubProducto"
             Visual="Material"
             BackgroundColor="#324A51">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="20">
                <StackLayout>
                    <Entry x:Name="idsubproductoEntry" IsVisible="False"/>
                    <Entry x:Name="nombreSpEntry" HorizontalOptions="FillAndExpand" Placeholder="Nombre"/>
                </StackLayout>
                <Button x:Name="btnEditarSP" Text="Editar" Clicked="BtnEditarSP_Clicked"/>
                <Button x:Name="btnBorrarSP" Text="Borrar" Clicked="BtnBorrarSP_Clicked"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>